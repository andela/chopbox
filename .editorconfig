root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.yml]
indent_style = space
indent_size = 2

#everything php following Laravel style guide
[*.php]
indent_style = space
indent_size = 4
insert_final_newline = true

#override for blade since its mostly html
[*.blade.php]
indent_style = space
indent_size = 4


[*.{css,js,html}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false